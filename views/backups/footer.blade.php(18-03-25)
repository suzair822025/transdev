<script>
    $('ul.navbar-nav-right li.dropdown').hover(function() {
        $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500);
        }, function() {
        $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500);
    }); 
    $(function() {           
      if (location.href === "https://www.leebonservices.com/") {
         
            $(window).ready(function () {
            $( '#modal-4').addClass('md-show');
            $('.md-overlay').addClass('showOverlay');
        });
         $('.hideModal').click(function() {
                $( '#modal-4').removeClass('md-show');
                $('.md-overlay').removeClass('showOverlay');
            });
         $('.md-close').click(function() {
                $( '#modal-4').removeClass('md-show');
                $('.md-overlay').removeClass('showOverlay');
            });
      }
    });
</script>
